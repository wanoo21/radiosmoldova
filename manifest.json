{
  "manifest_version": 2,
  "version": "1.9.0",
  "name": "Radio Moldova si Romania",
  "short_name": "Radio Moldova si Romania",
  "description": "Asculta online toate posturile Radio din Republica Moldova si Romania",
  "author": "Ion Prodan",
  "homepage_url": "https://github.com/wanoo21/radiosmoldova",
  "offline_enabled": false,
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com https://ajax.googleapis.com https://maxcdn.bootstrapcdn.com https://unpkg.com; object-src 'self'",
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png"
    },
    "default_popup": "popup.html",
    "default_title": "Radio Moldova si Romania"
  },
  "icons": {
    "128": "icons/icon-128.png",
    "64": "icons/icon-64.png",
    "48": "icons/icon-48.png",
    "32": "icons/icon-32.png",
    "16": "icons/icon-16.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": ["storage"],
  "update_url": "https://clients2.google.com/service/update2/crx"
}
